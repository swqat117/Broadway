<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/Backdrop"

    tools:context="com.quascenta.petersroad.myapplication.BoardDisplay">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/t1"
        android:layout_alignTop="@+id/t2"
        android:layout_toStartOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/t2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="44dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/score1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Time"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_alignStart="@+id/score2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score1"
        android:src="@drawable/zero"
        android:background="@null"
        android:alpha="2"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/t2" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score2"
        android:src="@drawable/zero"
        android:background="@null"
        android:alpha="2"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/t1" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="320dp"
        android:id="@+id/imageView"

        android:src="@drawable/pro"

        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button"
        android:layout_alignParentTop="true" />

</RelativeLayout>
